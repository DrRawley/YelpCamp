<% layout('layouts/boilerplate') %>

<h1>Register</h1>
<form action="/register" class="validated-form" novalidate method="post">
    <div class="mb-3">
        <label class="form-label" for="username">Username: </label>
        <input class="form-control" type="text" name="username" id="username" required>
        <div class="valid-feedback">Great username!</div>
        <div class="invalid-feedback">Username cannot be blank.</div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">E-mail: </label>
        <input class="form-control" type="email" name="email" id="email" required>
        <div class="valid-feedback">Interesting email.</div>
        <div class="invalid-feedback">Please enter a valid email.</div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password: </label>
        <input class="form-control" type="password" name="password" id="password" required>
        <div class="valid-feedback">Confounding password.</div>
    </div>
    <button class="btn btn-success">Register</button>
</form>