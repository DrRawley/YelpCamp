<% layout('layouts/boilerplate') %>

<div class=" justify-content-center align-items-center ">
    <div class="row">
        <div class="col-8 offset-2 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
            <div class="card shadow w-100">
                <img src="/login.jpg" alt="">
                <div class="card-body">
                    <h5 class="card-title">Register</h5>
                    <form action="/register" class="validated-form" novalidate method="post">
                        <div class="mb-3">
                            <label class="form-label" for="username">Username: </label>
                            <input class="form-control" type="text" name="username" id="username" autofocus required>
                            <div class="valid-feedback">Great username!</div>
                            <div class="invalid-feedback">Username cannot be blank.</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">E-mail: </label>
                            <input class="form-control" type="email" name="email" id="email" required>
                            <div class="valid-feedback">Interesting email.</div>
                            <div class="invalid-feedback">Please enter a valid email.</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password: </label>
                            <input class="form-control" type="password" name="password" id="password" required>
                            <div class="valid-feedback">Confounding password.</div>
                            <div class="invalid-feedback">You need a password!</div>
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>